<h1>Add new Answer</h1>

<%= form_for :answers, :url => {:controller => :answers, :action => :create} do |answer| %>
  <% if @answers.errors.any? %>
    <% @answers.errors.full_messages.each do |message| %>
      <div style="color:red"><%= message %></div>
    <% end %>
  <% end %>
  <p>
    <label>answer</label>
    <%= answer.text_field :text %>
  </p>
  <p>
    <label>Is true answer</label>
    <%= answer.check_box :is_true %>
  </p>
  <%= answer.hidden_field :question_id, :value => params[:question_id] %>

  <p> <%= answer.submit %></p>
  <p> <%= link_to "go home", {controller: 'questions'} %></p>
  <p> <%= link_to "Start Game", root_path %></p>

<% end %>